@model List<TicketsViewModel>

<h2>Список квитків</h2>

<p>
    <a asp-action="Create">Створити новий квиток</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Ідентифікатор</th>
            <th>Номер місця</th>
            <th>Ціна</th>
            <th>Доступність</th>
            <th>Фільм</th>
            <th>Користувач</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Id</td>
                <td>@ticket.SeatNumber</td>
                <td>@ticket.Price</td>
                <td>@(ticket.IsAvailable ? "Так" : "Ні")</td>
                <td>@ticket.Seance?.Movie</td>
                <td>@ticket.User?.UserName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@ticket.Id">Деталі</a> |
                    <a asp-action="Edit" asp-route-id="@ticket.Id">Редагувати</a> |
                    <a asp-action="Delete" asp-route-id="@ticket.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
